<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <TextView
                    android:id="@+id/tv_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Title goes here"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sub_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_header_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Subtitle goes here" />

                <Button
                    android:id="@+id/btn_act_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_sub_title_1"
                    android:layout_marginTop="30dp"
                    android:background="@null"
                    android:text="Action 1"
                    android:textColor="@color/colorPrimaryOrange" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_sub_title_1"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@id/btn_act_1"
                    android:background="@null"
                    android:text="Action 2"
                    android:textColor="@color/colorPrimaryOrange" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card_1"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/img_2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/img2"
                    android:gravity="bottom"
                    android:padding="8dp"
                    android:text="Title goes here"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/img_2">

                    <ImageView
                        android:id="@+id/img_fav_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:layout_toStartOf="@id/img_tag_1"
                        android:src="@drawable/ic_favorite" />

                    <ImageView
                        android:id="@+id/img_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:layout_toStartOf="@id/img_share_1"
                        android:src="@drawable/ic_bookmark" />

                    <ImageView
                        android:id="@+id/img_share_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_share" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_cards_3_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_2"
            android:layout_marginBottom="16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/img_3"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/img3_4"
                        android:gravity="bottom"
                        android:padding="8dp"
                        android:text="Title"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_3"
                        android:padding="4dp">

                        <ImageView
                            android:id="@+id/img_fav_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_favorite" />

                        <ImageView
                            android:id="@+id/img_tag_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_bookmark" />

                        <ImageView
                            android:id="@+id/img_share_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:src="@drawable/ic_share" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/img_4"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/img3_4"
                        android:gravity="bottom"
                        android:padding="8dp"
                        android:text="Title"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_4"
                        android:padding="4dp">

                        <ImageView
                            android:id="@+id/img_fav_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_favorite" />

                        <ImageView
                            android:id="@+id/img_tag_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_bookmark" />

                        <ImageView
                            android:id="@+id/img_share_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:src="@drawable/ic_share" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

