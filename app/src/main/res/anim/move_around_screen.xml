    </set>
    <!--left-->
    <set android:startOffset="2000">
        <translate
            android:duration="2000"
            android:fromXDelta="40%p"
            android:toXDelta="-40%p"
            android:fromYDelta="-40%p"
            android:toYDelta="-40%p"/>
    </set>
    <!--up-->
    <set android:startOffset="2000">
        <translate
            android:duration="2000"
            android:fromXDelta="-40%p"
            android:toXDelta="0%p" />
